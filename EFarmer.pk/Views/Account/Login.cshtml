@model EFarmer.pk.ViewModels.AccountViewModels.LoginAccountViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = @_localizer["Login"].Value;
}

<section class="section-padding error-page pattern-bg ">
    <!-- Main Container -->
    <div class="container">
        <div class="col-md-12 col-md-offset-3">
            <div class="row">
                <div class="col-md-7  col-xs-12 col-sm-6">
                    <div class="heading-panel">
                        <h3 class="main-title text-left">
                            @_localizer["Sign In to your account"]
                        </h3>
                    </div>
                    @*<img src="@Url.Content("~/images/banner-7.jpg")" class="img-responsive" />*@
                </div>
            </div>
            <!-- Row -->
            <div class="row">

                <!-- Middle Content Area -->
                <div class="col-md-5 col-sm-6 col-xs-12">
                    <!--  Form -->
                    <div class="form-grid">
                        <form asp-action="Login" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" placeholder="@_localizer["Your Email"]" class="form-control" type="email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" placeholder="@_localizer["Your Password"]" class="form-control" type="password">
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-7">
                                        <div class="skin-minimal">
                                            <ul class="list">
                                                <li>
                                                    <input asp-for="IsRemembered" type="checkbox" id="minimal-checkbox-1">
                                                    <label asp-for="IsRemembered" for="minimal-checkbox-1"></label>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-5 text-right">
                                        <p class="help-block">
                                            <a data-target="#myModal" data-toggle="modal">@_localizer["Forgot password?"]</a>
</p>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-theme btn-lg btn-block">@_localizer["Login With Us"]</button>
</form>
                    </div>
                    <!-- Form -->
                </div>
                <!-- Middle Content Area  End -->
            </div>
            <!-- Row End -->
        </div>
    </div>
    <!-- Main Container End -->
</section>

@section ModalSection{
    <partial name="_ForgetAccountPartial" />
}