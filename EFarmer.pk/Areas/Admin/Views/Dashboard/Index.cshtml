@model EFarmer.pk.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
@section PageStyles{
    <link href="~/css/AdminPanelCSS/assets/node_modules/morrisjs/morris.css" rel="stylesheet" />
    <link href="~/css/AdminPanelCSS/dist/css/pages/dashboard3.css" rel="stylesheet">
}
@section Styles{

}
<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3 col-md-6 m-b-30 text-center">
                        <small>Total Ads Posted</small>
                        <h2><i class="ti-announcement  text-cyan"></i> <span id="totalAdsPosted"></span></h2>
                        <div id="totalAdsPostedBar"></div>
                    </div>
                    <div class="col-lg-3 col-md-6 m-b-30 text-center">
                        <small>Total Users</small>
                        <h2><i class="ti-user text-purple"></i> <span id="totalUsers"></span></h2>
                        <div id="totalUsersBar"></div>
                    </div>
                    <div class="col-lg-3 col-md-6 m-b-30 text-center">
                        <small>New Users</small>
                        <h2><i id="newUsersIcon" class=""></i> <span id="newUsersPercent"></span></h2>
                        <div id="newUsersBar"></div>
                    </div>
                    <div class="col-lg-3 col-md-6 m-b-30 text-center">
                        <small>New Ads Posted</small>
                        <h2><i id="newAdsIcon" class=""></i> <span id="newAdsPosted"></span></h2>
                        <div id="newAdsBar"></div>
                    </div>
                </div>
                <ul class="list-inline font-12 text-center">
                    <li><i class="fa fa-circle text-cyan"></i> Lahore</li>
                    <li><i class="fa fa-circle text-primary"></i> Bahawalpur</li>
                    <li><i class="fa fa-circle text-purple"></i> Faisalabad</li>
                </ul>
                <div id="AdMonthlyChart" style="height: 450px;"></div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <!-- column -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">BUYERS</h5>
                        <div class="d-flex m-t-30 m-b-20 no-block align-items-center">
                            <span class="display-5 text-info"><i class="fas fa-cubes"></i></span>
                            <a href="javscript:void(0)" class="link display-5 ml-auto"><span id="buyersCount"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">SELLERS</h5>
                        <div class="d-flex m-t-30 m-b-20 no-block align-items-center">
                            <span class="display-5 text-purple"><i class="ti-anchor"></i></span>
                            <a href="javscript:void(0)" class="link display-5 ml-auto"><span id="sellersCount"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">CROPS, FRUITS & VEGIES</h5>
                        <div class="d-flex m-t-30 m-b-20 no-block align-items-center">
                            <span class="display-5 text-primary"><i class="fas fa-leaf"></i></span>
                            <a href="javscript:void(0)" class="link display-5 ml-auto"><span id="cropsCount"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">CITIES</h5>
                        <div class="d-flex m-t-30 m-b-20 no-block align-items-center">
                            <span class="display-5 text-success"><i class="fas fa-globe"></i></span>
                            <a href="javscript:void(0)" class="link display-5 ml-auto"><span id="citiesCount"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- column -->
        </div>
    </div>
</div>

<div class="row">
    <!-- Column -->
    <div class="col-lg-8 col-md-12">
        <div class="card" style="height: 500px;">
            <div class="card-body">
                <div class="d-flex m-b-40 align-items-center no-block">
                    <h5 class="card-title ">SEASONAL OVERVIEW</h5>
                    <div class="ml-auto">
                        <ul id="seasonalOverviewChartLabels" class="list-inline font-12">
                        </ul>
                    </div>
                </div>
                <div id="seasonalOverviewChart" style="height: 340px;"></div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-lg-4 col-md-12">
        <div class="row">
            <!-- Column -->
            <div class="col-md-12">
                <div class="card" style="height: 500px;">
                    <div class="card-body">
                        <div class="d-flex m-b-40 align-items-center no-block">
                            <h5 class="card-title ">POPULARITY CHART</h5>
                            <div class="ml-auto">
                                <ul id="popularityChartLabels" class="list-inline font-12">
                                </ul>
                            </div>
                        </div>
                        <div id="popularityChart"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section PageScripts{
    <!--sparkline JavaScript -->
    <script src="~/css/AdminPanelCSS/assets/node_modules/raphael/raphael-min.js"></script>
    <script src="~/css/AdminPanelCSS/assets/node_modules/morrisjs/morris.js"></script>
    <script src="~/css/AdminPanelCSS/assets/node_modules/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!-- Vector map JavaScript -->
    <!-- Chart JS -->
}
@section Scripts{
    <script>
        var adChartUrl = '@Url.Action("GetAreaChart")';
        var timelineChartUrl = '@Url.Action("GetTimelineBars")';
        var overviewChartUrl = '@Url.Action("GetSeasonalOverview")';
        var popularityChartUrl = '@Url.Action("GetPopularityChart")';
        var detailsUrl = '@Url.Action("GetDashboardDetails")';
    </script>
    <script src="~/css/AdminPanelCSS/dist/js/dashboard.js"></script>
}

