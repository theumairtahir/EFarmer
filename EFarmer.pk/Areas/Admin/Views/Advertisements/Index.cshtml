@{
    ViewData["Title"] = "Advertisements";
}
@section PageStyles{
    <link href="~/css/AdminPanelCSS/assets/node_modules/datatables/media/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/css/AdminPanelCSS/assets/node_modules/morrisjs/morris.css" rel="stylesheet">
}
@section Styles{

}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Advertisements</h4>
        <h6 class="card-subtitle">Here's the list of Advertisements</h6>
        <div class="table-responsive m-t-40">
            <table id="dtAdvertisements" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sr#.</th>
                        <th>Action</th>
                        <th>Picture</th>
                        <th>Name</th>
                        <th>Bids</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Seller</th>
                        <th>Location</th>
                        <th>Posted</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_Insights" />
@section PageScripts{
    <script src="~/css/AdminPanelCSS/assets/node_modules/datatables/datatables.min.js"></script>
    <script src="~/css/AdminPanelCSS/dist/js/pages/validation.js"></script>
    <script src="~/css/AdminPanelCSS/assets/node_modules/raphael/raphael-min.js"></script>
    <script src="~/css/AdminPanelCSS/assets/node_modules/morrisjs/morris.js"></script>
    <!-- start - This is for export functionality only -->
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.flash.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js"></script>
    </environment>
}
@section Scripts{
    <script>
        var advertisementsDataUrl = '@Url.Action("GetDtAdvertisements")';
        var blockAdvertisementUrl = '@Url.Action("BlockItem")';
        var bidChartUrl = '@Url.Action("GetBidChartData")';
        $("input,select,textarea").not("[type=submit]").jqBootstrapValidation();
        $('#advertisementForm').jqBootstrapValidation();

    </script>
    <script src="~/css/AdminPanelCSS/dist/js/Advertisements.js"></script>
}