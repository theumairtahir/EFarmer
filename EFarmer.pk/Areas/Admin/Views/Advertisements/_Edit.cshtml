@model EFarmer.pk.Areas.Admin.Models.AgroItemViewModel
@{
    List<SelectListItem> categories = new List<SelectListItem>();
    categories.Add(new SelectListItem
    {
        Text = "Crops",
        Value = "1"
    });
    categories.Add(new SelectListItem
    {
        Text = "Fruits",
        Value = "2"
    });
    categories.Add(new SelectListItem
    {
        Text = "Vegetables",
        Value = "3"
    });
}
<div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Edit AgroItem" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="titleAgroItemModal">Edit</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form asp-action="EditAgroItem" id="agroItemForm" asp-antiforgery="true">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div class="card-body">
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <div class="controls">
                                            <input asp-for="Name" class="form-control" placeholder="Enter name of an Agro Item" required data-validation-required-message="This field is required" maxlength="50">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Category" class="control-label"></label>
                                        <div class="controls">
                                            <select asp-for="Category" asp-items="categories" required class="form-control">
                                                <option value="">Select Your Category</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="WeightScale" class="control-label"></label>
                                        <div class="controls">
                                            <input asp-for="WeightScale" class="form-control" placeholder="Enter Weight Scale for Item" required data-validation-required-message="This field is required" maxlength="10">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnClose" type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button id="btnSave" type="button" class="btn btn-success waves-effect waves-light"><i class="fa fa-check"></i> Save</button>
            </div>
        </div>
    </div>
</div>
