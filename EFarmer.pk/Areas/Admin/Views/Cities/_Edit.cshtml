@model EFarmer.pk.Areas.Admin.Models.CityViewModel

<div id="editModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Edit City" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="titleCityModal">Edit</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form asp-action="EditCity" id="cityForm" asp-antiforgery="true">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div class="card-body">
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <div class="controls">
                                            <input asp-for="Name" class="form-control" placeholder="Enter name of a City" required data-validation-required-message="This field is required" maxlength="50">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*<div class="form-actions">
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                                        <button type="button" id="btnCancel" class="btn btn-dark">Cancel</button>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnClose" type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button id="btnSave" type="button" class="btn btn-success waves-effect waves-light"><i class="fa fa-check"></i> Save</button>
                @*<button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                    <button type="button" id="btnCancel" class="btn btn-dark">Cancel</button>*@
            </div>
        </div>
    </div>
</div>
